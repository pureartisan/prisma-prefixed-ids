// This is your Prisma schema file for PostgreSQL integration tests

generator client {
  provider = "prisma-client-js"
  output   = "../client-postgres"
}

datasource db {
  provider = "postgresql"
  // @note: Prisma 6 requires it in schema file and will be added by the CI workflow
  // url      = env("DATABASE_URL")
}

model Order {
  id        String     @id
  orderNumber String   @unique
  lineItems LineItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("orders")
}

model LineItem {
  id        String  @id
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("line_items")
}
